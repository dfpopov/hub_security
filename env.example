# =============================================================================
# Book Collection API - Environment Variables
# =============================================================================
# Copy this file to .env and update the values for your environment
# =============================================================================

# Database Configuration
# =============================================================================
# MySQL root password (CHANGE THIS IN PRODUCTION!)
MYSQL_ROOT_PASSWORD=rootpassword

# MySQL user credentials (CHANGE THESE IN PRODUCTION!)
MYSQL_USER=user
MYSQL_PASSWORD=password

# Main database for the application
DATABASE_URL=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@localhost:3306/book_collection

# Test database for running tests (separate from main database)
TEST_DATABASE_URL=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@localhost:3306/book_collection_test

# JWT Authentication Configuration
# =============================================================================
# Secret key for JWT token signing (CHANGE THIS IN PRODUCTION!)
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-minimum-32-characters

# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Example: CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_ORIGINS=

# Database Pool Configuration
# =============================================================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# JWT algorithm (HS256 is recommended)
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
# =============================================================================
# Debug mode (set to False in production)
DEBUG=True

# API version prefix
API_V1_STR=/api/v1

# Application name
PROJECT_NAME=Book Collection API

# =============================================================================
# Optional: Database Pool Configuration
# =============================================================================
# Uncomment and adjust these if you need to configure connection pooling
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_TIMEOUT=30

# =============================================================================
# Optional: Logging Configuration
# =============================================================================
# Uncomment and adjust these for custom logging
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# =============================================================================
# Optional: CORS Configuration
# =============================================================================
# Uncomment and adjust these for CORS settings
# CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
# CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# Production Settings (uncomment for production)
# =============================================================================
# DEBUG=False
# SECRET_KEY=your-production-secret-key-here
# DATABASE_URL=mysql+pymysql://prod_user:prod_password@prod_host:3306/prod_database
